<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlTimeline"
        android:layout_width="75dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTopLine"
            android:layout_width="@dimen/comment_0.5_dip"
            android:layout_height="@dimen/comment_20_dip"
            android:layout_centerHorizontal="true"
            android:background="@color/alpha_05_black" />

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="@dimen/comment_10_dip"
            android:layout_height="@dimen/comment_10_dip"
            android:layout_below="@id/tvTopLine"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/comment_2_dip"
            android:background="@mipmap/timelline_dot_secord" />

        <TextView
            android:layout_width="@dimen/comment_0.5_dip"
            android:layout_height="match_parent"
            android:layout_below="@id/tvDot"
            android:layout_centerHorizontal="true"
            android:background="@color/alpha_05_black" />

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTopLine"
            android:layout_marginLeft="@dimen/comment_3_dip"
            android:layout_toRightOf="@id/tvDot"
            android:background="@color/qmui_config_color_red"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/white"
            android:textSize="@dimen/comment_12_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/comment_6_dip"
        android:paddingLeft="@dimen/comment_10_dip"
        android:paddingRight="@dimen/comment_10_dip"
        android:paddingTop="@dimen/comment_10_dip">

        <ImageView
            android:id="@+id/iv_AcceptTime"
            android:layout_width="@dimen/comment_15_dip"
            android:layout_height="@dimen/comment_15_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:src="@mipmap/icon_clock_home" />


        <TextView
            android:id="@+id/tvAcceptTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:layout_toRightOf="@id/iv_AcceptTime"
            android:text="2014/06/24 20:55:28"
            android:textColor="@color/black"
            android:textSize="@dimen/comment_12_size" />

        <ImageView
            android:id="@+id/iv_AcceptStation"
            android:layout_width="@dimen/comment_15_dip"
            android:layout_height="@dimen/comment_15_dip"
            android:layout_below="@id/tvAcceptTime"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:src="@mipmap/icon_location_home" />

        <TextView
            android:id="@+id/tvAcceptStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAcceptTime"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:textSize="@dimen/comment_12_size"
            android:layout_toRightOf="@id/iv_AcceptStation"
            android:text="在湖南隆回县公司进行到件扫描"
            android:textColor="@color/black"
             />

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="@dimen/comment_70_dip"
            android:layout_height="@dimen/comment_100_dip"
            android:layout_below="@id/tvAcceptStation"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:background="@color/transparent2"
            android:scaleType="fitXY"
            android:src="@drawable/home_middle_five"

            />

        <ImageView
            android:id="@+id/iv_goods_two"
            android:layout_width="@dimen/comment_70_dip"
            android:layout_height="@dimen/comment_100_dip"
            android:layout_below="@id/tvAcceptStation"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:layout_toRightOf="@id/iv_goods"
            android:background="@color/transparent2"
            android:scaleType="fitXY"
            android:src="@drawable/home_middle_five"

            />

    </RelativeLayout>
</LinearLayout>